<div class="wrapper_with_padding">
  <div id="notes">
    <% unless @notes.blank? %>
      <% @notes.each do |note| %>
          <div class="note">
            <p class="title"><%= link_to note.title, note %></p>
            <p class="date"><%= time_ago_in_words(note.created_at) %> age</p>
          </div>
      <% end %>
    <% else %>
      <h2>Add a note</h2>
      <p>It appears you haven't created any notes yet... Lets fix that. Why don't you create a new note below.</p>
      <%= link_to "New Note", new_note_path, class: "button" %>
    <% end %>
  </div>
</div>
